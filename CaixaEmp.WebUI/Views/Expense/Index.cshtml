@model IEnumerable<CaixaEmp.Application.DTOs.ExpenseDTO>

@{
    ViewData["Title"] = "Index";
}

<p class="btnNovo">
    <a asp-action="Create">Criar nova Despesa</a>
</p>

@if(TempData["Confirmacao"] != null)
{
    <h6 class="alert alert-success">@TempData["Confirmacao"]</h6>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a> |                    
                    <a asp-action="Delete" asp-route-id="@item.Id" clas="btn btn-danger">Deleção</a>
                </td>
            </tr>
        }
    </tbody>
</table>